@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Người dùng";
    Layout = "_AdminLayout";
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Người dùng hệ thống</h2>
        </div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">ID người dùng</th>
                <th scope="col">Tên đăng nhập</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Email</th>
                <th scope="col">Xác nhận Email</th>
                <th scope="col">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="30%">@u.Id</td>
                    <td>@u.UserName</td>
                    <td>@u.PhoneNumber</td>
                    <td>@u.Email</td>
                    <td>@(u.EmailConfirmed ? "Đã xác nhận" : "Chưa xác nhận")</td>
                    <td>
                        <a asp-controller="Roles" asp-action="addRoles" asp-route-userId="@u.Id" class="btn btn-sm btn-success">
                            <i class="bi bi-pencil"></i> Chỉnh sửa vai trò
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

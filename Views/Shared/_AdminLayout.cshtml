<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
     
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>

    @* BootStrap *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!--DtataTable-->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.bootstrap5.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.2/css/responsive.bootstrap5.css" />

    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />


    <link rel="stylesheet" href="~/css/adminstyle.css" />

    <link rel="stylesheet" href="~/css/bootstrap.min(3).css" />
     
</head>
<body>
    <div class="main-contaier"> 
            
            @* side nav bar *@
        <nav class="sidenav list-group ">

            <a class="navigation-link   " asp-controller="Home" asp-action="Index">Quay về trang chủ</a>
            <a class="navigation-link   " asp-controller="AdminOperations" asp-action="Dashboard">    Dashboard  </a>
            <a class="navigation-link   " asp-controller="Roles" asp-action="Index">Quản lý vai trò người dùng</a>
			<a class="navigation-link   " asp-controller="User" asp-action="Index">Quản lý người dùng</a>
            <a class="navigation-link   " asp-area="" asp-controller="AdminOperations" asp-action="GetAllItems">Quản lý sản phẩm  </a>
            <a class="navigation-link   " asp-controller="AdminOperations" asp-action="AllOrders">Quản lý Đơn hàng</a>
			<a class="navigation-link   " asp-controller="AdminOperations" asp-action="GetAllCategories">Quản lý nhãn/thể loại</a>
            <a class="navigation-link   " asp-controller="Stock" asp-action="Index">Sản phẩm</a> 

            
                </nav>
             @*  upper nav bar *@
        <div class="right-panel">
            <nav class="nav-bar">
                <div class="nav-heading">Welcome @User.Identity?.Name</div>
                <div class="nav-actions">
                    <a href="/Identity/Account/Manage/Index" class="navigation-link"><i class="bi bi-gear"></i> Manage account</a>
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="navigation-link">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </button>
                    </form>
                </div>
            </nav>
            <div class="content container">
                @RenderBody()
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script> 
    <!-- Bootstrap core JS-->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <!--DtataTable-->
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.js "></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.datatables.net/responsive/3.0.2/js/dataTables.responsive.js "></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

 
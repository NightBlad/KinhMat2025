@model IdentityUser

@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h4>Delete User</h4>
    <h5>Are you sure you want to delete this user?</h5>
    <div>
        <h6>User Details</h6>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">User Name</dt>
            <dd class="col-sm-10">@Model.UserName</dd>
            <dt class="col-sm-2">Email</dt>
            <dd class="col-sm-10">@Model.Email</dd>
            <dt class="col-sm-2">Email Confirmed</dt>
            <dd class="col-sm-10">@Model.EmailConfirmed</dd>
        </dl>
        
        <form asp-action="DeleteConfirmed" method="post" class="form-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </form>
    </div>
</div>

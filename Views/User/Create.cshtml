@model Shopping_Cart_2.ViewModels.CreateUserViewModel

@{
    ViewData["Title"] = "Thêm người dùng";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create" method="post" id="createUserForm">
                <h2>Tạo người dùng mới.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="UserName" class="form-control" aria-required="true" placeholder="Username" />
                    <label asp-for="UserName">Tên người dùng</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="EmailConfirmed" class="form-check-input" type="checkbox" />
                    <label asp-for="EmailConfirmed" class="form-check-label">Xác nhận email</label>
                    <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <select asp-for="Role" class="form-control" asp-items="@(new SelectList(ViewBag.Roles, "Name", "Name"))">
                        <option value="">Select Role</option>
                    </select>
                    <label asp-for="Role">Quyền hạn</label>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3 position-relative">
                    <input asp-for="Password" class="form-control" id="Password" type="password" placeholder="Password" />
                    <label asp-for="Password">Mật khẩu</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <i class="bi bi-eye position-absolute" id="togglePassword" style="cursor: pointer; right: 20px; top: 50%; transform: translateY(-50%);"></i>
                </div>
                <button id="createUserSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Tạo người dùng</button>
                <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Quay lại</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            var passwordField = document.getElementById('Password');
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
            } else {
                passwordField.type = 'password';
            }
        });
    </script>
}

<!-- Thêm JavaScript ở đây -->
<script>
    const heroBg = document.querySelector('.hero-bg');
    const heroOverlay = document.querySelector('.hero-overlay');
    const images = [
        'url("../assets/img/bg/background1.jpg")',
        'url("../assets/img/bg/background2.jpg")',
        'url("../assets/img/bg/background3.jpg")'
    ];
    const links = [
        'https://kinhmatkool.io.vn/Items/Details?itemId=11',
        'https://kinhmatkool.io.vn/Items/Details?itemId=3',
        'https://kinhmatkool.io.vn/Items/Details?itemId=5'
    ];
    let currentIndex = 0;

    function changeBackground() {
        heroBg.classList.add('transitioning');
        heroBg.style.opacity = 0;

        setTimeout(() => {
            currentIndex = (currentIndex + 1) % images.length;
            heroBg.style.backgroundImage = images[currentIndex];
            heroBg.style.opacity = 1;
            heroBg.classList.remove('transitioning');
        }, 1000);
    }

    // Khởi tạo hình nền ban đầu
    heroBg.style.backgroundImage = images[currentIndex];

    // Thêm sự kiện click vào heroOverlay
    heroOverlay.addEventListener('click', () => {
        if (!heroBg.classList.contains('transitioning')) {
            window.location.href = links[currentIndex];
        }
    });

    // Bắt đầu chuyển đổi hình nền
    setInterval(changeBackground, 4000);
</script>


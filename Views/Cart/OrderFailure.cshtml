@{
    ViewData["Title"] = "Order Failure";
    var errorMessage = ViewData["ErrorMessage"] as string;
}

<div class="container text-center mt-5">
    <div class="alert alert-danger p-4 rounded shadow">
        <h1 class="text-danger">Order Failed</h1>
        <p class="lead">@errorMessage</p>
        <a href="/Cart/GetUserCart" class="btn btn-dark mt-3">Go Back to Cart</a>
        <a href="/Cart/Checkout" class="btn btn-primary mt-3">Retry Checkout</a>
    </div>
</div>

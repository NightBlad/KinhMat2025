@model Order

@{
    ViewData["Title"] = "GetDetail";
}

<div   class="container mt-4">
    <h1 class="mt-5">Thông tin đơn hàng  @Model.Id </h1>
    <a asp-action="UserOrders" class="btn btn-dark rounded-pill  m-3" style="width: 9rem;">Quay lại</a>

    <div class="row py-5 p-4 bg-white rounded shadow-sm">
        <!-- Order table -->
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" class="border-0 bg-light">
                            <div class="p-2 px-3 text-uppercase">Sản phẩm</div>
                        </th>
                        <th scope="col" class="border-0 bg-light">
                            <div class="py-2 text-uppercase">Giá </div>
                        </th>
                        <th scope="col" class="border-0 bg-light">
                            <div class="py-2 text-uppercase">Số lượng</div>
                        </th>

                        <th scope="col" class="border-0 bg-light">
                            <div class="py-2 text-uppercase">Tổng</div>
                        </th>
                         

                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model.OrderDetail)
                    {
                        <tr>
                            <th scope="row" class="border-0">
                                <div class="p-2">
                                    <img src="/assets/images/items/@i.Item.Cover" alt="" width="70" class="img-fluid rounded shadow-sm">
                                    <div class="ml-3 d-inline-block align-middle">
                                        <h5 class="mb-0"> <a href="#" class="text-dark d-inline-block align-middle">Timex Unisex Originals</a></h5><span class="text-muted font-weight-normal font-italic d-block">Category: @i.Item.Category.Name</span>
                                    </div>
                                </div>
                            </th>
                            <td class="border-0 align-middle"><strong>$ @i.Item.Price</strong></td>
                            <td class="border-0 align-middle"><strong>@i.Quantity</strong></td>
                            <td class="border-0 align-middle"><strong>$ @(i.Item.Price * i.Quantity)</strong></td> 
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- End -->
    </div> 
     <!-- Order summary -->
    <div class="row py-5 p-4 bg-white rounded shadow-sm">
        <div class="bg-light rounded-pill px-4 py-3 text-uppercase fw-bold">Tóm tắt đơn hàng </div>
        <div class="p-4">
            <p class="font-italic mb-4">Phí vận chuyển và chi phí bổ sung được tính dựa trên giá trị kê khai.</p>
            <ul class="list-unstyled mb-4">
                <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Trạng thái đơn hàng</strong><strong>@(Model.OrderStatus.StatusName)</strong></li>
                <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Tổng giá đơn hàng </strong><strong>$@(Model.OrderDetail.Select(i => i.Item.Price * i.Quantity).Sum())</strong></li>
                <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Phí vận chuyển</strong><strong>$0.00</strong></li>
                <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">VAT</strong><strong>$0.00</strong></li>
                <li class="d-flex justify-content-between py-3 border-bottom">
                    <strong class="text-muted">Tổng </strong>
                    <h5 class="font-weight-bold">$@(Model.OrderDetail.Select(i => i.Item.Price * i.Quantity).Sum()) </h5>
                </li>
            </ul> 
        </div>
    </div>

</div>
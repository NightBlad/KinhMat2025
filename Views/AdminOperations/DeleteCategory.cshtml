@model Shopping_Cart_2.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h4>Delete Category</h4>
    <h5>Are you sure you want to delete this?</h5>
    <div>
        <h6>Category</h6>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
        </dl>
        
        <form asp-action="DeleteCategoryConfirmed" class="form-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="GetAllCategories" class="btn btn-secondary ml-2">Back to List</a>
        </form>
    </div>
</div>

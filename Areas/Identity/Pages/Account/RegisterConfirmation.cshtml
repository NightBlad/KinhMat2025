@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Xác nhận đăng ký tài khoản";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
     <a id="confirm-link" href="@Model.EmailConfirmationUrl">Nhấp vào đây để xác nhận tài khoản của bạn</a>
</p>
    }
    else
    {
<p>
        Please check your email to confirm your account.
</p>
    }
}

